
@{
    ViewBag.Title = "AddProductsIndex";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model QuanLySieuThi.DTO.Product
<style>




    #userTable th,
    #userTable td {
        border: 1px solid #ccc;
        padding: 8px;
        text-align: left;
    }

    #userTable th {
        background-color: #f2f2f2;
    }

    #userTable tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    #userTable tr:hover {
        background-color: #ddd;
    }



    .search-buttons {
        border-radius: 3px;
        border: 1px solid black;
        padding: 5px 10px;
        font-size: 14px;
        cursor: pointer;
    }

    .text-right {
        text-align: right !important;
    }

    .main-seach {
        margin-bottom: 5px;
        float: right;
        top: 10px;
        right: 10px;
    }

    #userTable {
        border-collapse: collapse;
    }

        #userTable th,
        #userTable td {
            border: none;
            background-color: #fff;
            border-top: 1px solid #dee2e6;
            vertical-align: middle;
        }


    body {
        background: #f1f1f1;
    }

    div.all-tables {
        border-collapse: collapse;
        background-color: #fff;
        padding: 20px 25px;
        width: 75%;
        float: right;
        margin-left: 5%;
        margin-top: 5%;
        margin-right: 3%;
    }

    .btn-rounded {
        width: 47px;
    }

    #userTable {
        width: 100%;
    }

    div.form-item > label {
        padding-top: 5px;
        color: black !important;
        display: block;
        font-size: 15px !important;
    }

    div.form-item input {
        margin-bottom: 5px;
    }

    div.form-btn {
        margin-top: 5px;
    }
</style>


<div class="all-tables">
    <div class="main-seach">
        <span>Seach:</span>
        <input type="text" onchange="searchUser()" id="searchInput" class="search-buttons" oninput="searchUser()" placeholder="Nhập tên hoặc email">
    </div>


    <div id="userTable">
        @using (Html.BeginForm("Add", "Product", FormMethod.Post))
        {
            <form class="form-main" id="form-7">
                <div class="form-item">
                    <div class="form-item">
                        <label>ID: </label>
                        <input id="ID" name="ID" value="@ViewBag.ID" readonly type="text" placeholder="" />
                        <span class="form-message"></span>
                    </div>
                    <label>Tên sản phẩm: </label>
                    <input id="Name" name="Name" value="@ViewBag.Name" type="text" placeholder="Nhập tên sản phẩm">
                    <span class="form-message"></span>
                </div>

                <div class="form-item">
                    <label>Gía tiền: </label>
                    <input id="UnitPrice" name="UnitPrice" value="@ViewBag.UnitPrice" type="text" placeholder="Nhập giá tiền">
                    <span class="form-message"></span>
                </div>

                <div class="form-item">
                    <label>Số lượng: </label>
                    <input id="UnitInStock" name="UnitInStock" value="@ViewBag.UnitInStock" type="text" placeholder="Nhập số lượng">
                    <span class="form-message"></span>
                </div>

                <div class="form-item">
                    <label>Mã danh mục: </label>
                    <input id="CateID" name="CateID" value="@ViewBag.CateID" type="text" placeholder="Nhập mã danh mục">
                    <span class="form-message"></span>
                </div>

                <div class="form-item">
                    <label>Mã nhà cung ứng: </label>
                    <input id="SuppilerID" name="SuppilerID" value="@ViewBag.SuppilerID" type="text" placeholder="Nhập mã nhà cung ứng" />
                    <span class="form-message"></span>
                </div>
                <div class="form-item">
                    <label>Mã nhà cung ứng: </label>
                    <input id="Description" name="Description" value="@ViewBag.Description" type="text" placeholder="Nhập mô tả" />
                    <span class="form-message"></span>
                </div>

                <div class="form-item">
                    <label>Hình ảnh: </label>
                    <input id="Image_Url" name="Image_Url" value="@ViewBag.Image_Url" type="text" placeholder="Nhập link hình ảnh" />
                    <span class="form-message"></span>
                </div>


                <div class="form-btn">
                    <button type="submit" class="form-submit">Xác nhận</button>

                </div>
            </form>
        }
    </div>
</div>

<script>
    Validator({
        form: '#form-7',
        formGroupSelector: '.form-item',
        errorSelector: '.form-message',
        rules: [

            Validator.isRequired('#fullname', "Vui lòng nhập tên đầy đủ !"),
            Validator.isRequired('#address', "Vui lòng nhập địa chỉ!"),
            Validator.minLength('#password', 6),
            Validator.isEqualPhone("#phone", 10)

        ],
        onSubmit: function (data) {
            const form = document.getElementById("form-7");
            const formData = new FormData(form)
            fetch('/Product/AddProductIndex', {
                method: 'POST',
                body: formData
            })
                .then(response => {
                    console.log("fetch dữ liệu thành công lên server");
                })
                .catch(error => {
                    console.log("fetch dữ liệu thất bại");
                });
        }
    })
</script>