                        <li data-title="cam" data-hex="#FF8040"></li>
                        <li data-title="trắng" data-hex="#FFFFFF"></li>
                    </ul>
                </div>
                <!--description-->


                <div class="ega-product-page-info-item">


                    <h5 class="ega-pr-page-vendor">
                        Thương hiệu:
                        <a href="/collections/vendors?query=Abbott" title="Abbott">Abbott</a>
                    </h5>



