@{
    ViewBag.title = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/static/js/validate_input.js" type="text/javascript"></script>
<link rel="stylesheet" type="text/css" href="~/static/css/login.css" media="all">

<style>
    .invalid {
        color: red;
        font-size: 12px;
    }

    .input-error {
        border: 1px solid red !important;
        outline: 1px solid red !important;
    }

    div.form-item > label {
        padding-top: 5px;
        color: black !important;
        display: block;
        font-size: 15px !important;
    }
    div.form-item input {
        margin-bottom:5px;
    }
    div.form-btn{
        margin-top:5px;
    }
</style>
<div class="alls">
    <div class="alls-form">
        <h4>ĐĂNG KÝ TÀI KHOẢN</h4>

        <form class="form-main" id="form-1">
            <div class="form-item">
                <label>Tên đăng nhập: </label>
                <input id="fullname" name="username" type="text" placeholder="Nhập tên...">
                <span class="form-message"></span>
            </div>

            <div class="form-item">
                <label>Email: </label>
                <input id="email" name="email" type="text" placeholder="Nhập email...">
                <span class="form-message"></span>
            </div>

            <div class="form-item">
                <label>Số điện thoại: </label>
                <input id="phone" id="email" name="email" type="text" placeholder="Nhập số điện thoại...">
                <span class="form-message"></span>
            </div>

            <div class="form-item">
                <label>Loại tài khoản: </label>

                <select class="form-control">
                    <option selected="">Khách hàng</option>
                    <option>Nhân viên</option>
                    <option>Quản trị viên</option>

                </select>
            </div>

            <div class="form-item">
                <label>Mật khẩu: </label>
                <input id="password" name="password" type="password" placeholder="Nhập mật khâu..." />
                <span class="form-message"></span>
            </div>

            <div class="form-item">
                <label>Nhập lại mật khẩu: </label>
                <input id="cofirmpassword" name="cofirmpassword" type="password" placeholder="Nhập lại mật khẩu..." />
                <span class="form-message"></span>
            </div>

            <div class="form-btn">
                <button type="submit" class="form-submit">Đăng ký</button>
                @Html.ActionLink("Đăng nhập", "Login", "Home", null, new { @class = "a-link" })
            </div>

            <div class="final-button">
                <h5>Hoặc đăng nhập bằng</h5>
                <div>
                    <a href="" class="btn btn-twitter tw"> <i class="fab fa-twitter"></i>   Đăng nhập bằng Twitter</a>
                    <a href="" class="btn  btn-facebook fb"> <i class="fab fa-facebook-f"></i>   Đăng nhập bằng facebook</a>
                </div>
            </div>

        </form>
    </div>
</div>

<script>
    Validator({
        form: '#form-1',
        formGroupSelector: '.form-item',
        errorSelector: '.form-message',
        rules: [
            Validator.isRequired('#fullname', "Vui lòng nhập tên đầy đủ !"),
            Validator.isEmail('#email'),
            Validator.minLength('#password', 6),
            Validator.isRequired('#cofirmpassword'),
            Validator.isEqualPhone("#phone", 10),
            Validator.isConfirmed('#cofirmpassword', function () {
                return document.querySelector('#form-1 #password').value;
            }, 'Mật Khẩu nhập lại không chính xác!'),
        ],
        onSubmit: function (data) {
            console.log(data)
        }
    })
</script>